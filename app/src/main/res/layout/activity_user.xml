<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_semi_transparent"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/app_intro_blue">
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.AppCompatEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="@dimen/spacing_18dp"
        android:layout_marginLeft="@dimen/spacing_18dp"
        android:padding="@dimen/spacing_18dp"
        android:id="@+id/et_name"
        android:background="@drawable/bg_edittext"
        android:hint="@string/full_name_hint"
        />

    <android.support.v7.widget.CardView
        android:id="@+id/btn_start"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="@dimen/spacing_xxlarge"
        android:layout_marginTop="@dimen/spacing_xxxlarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_18dp"
        android:layout_marginLeft="@dimen/spacing_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_name"
        app:cardBackgroundColor="@color/start_btn_green">
        <android.support.v7.widget.AppCompatButton
            android:letterSpacing=".033"
            android:id="@+id/btn_start_test"
            android:paddingTop="@dimen/spacing_xsmall"
            android:paddingBottom="@dimen/spacing_xsmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@null"
            android:clickable="false"
            android:drawablePadding="8dp"
            android:text="START"
            android:textColor="@color/white"
            android:textSize="11sp"
            android:layout_centerHorizontal="true" />
    </android.support.v7.widget.CardView>

    <com.gallery.app.custom.CircleImageView
        android:id="@+id/materialup.profile_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="50dp"
        android:elevation="8dp"
        android:src="@drawable/user_avatar"
        app:border_color="#FFF"
        app:border_width="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>